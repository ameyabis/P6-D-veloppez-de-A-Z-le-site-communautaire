{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
{% for flash_error in app.flashes('verify_email_error') %}
<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
{% endfor %}

{{ form_errors(registrationForm) }}

<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card-border-radius card">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-lg-block">
                            <img src="https://images.photowall.com/products/48586/snowboard-grab.jpg?h=699&q=85"
                                alt="login form" class="img-register img-fluid h-100" />
                        </div>

                        <div class="col-md-12 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">
                                {{ form_start(registrationForm) }}
                                <div class="d-flex justify-content-center mb-3 pb-1">
                                    <img src="https://img.freepik.com/vecteurs-premium/logo-snowboard_25327-271.jpg?w=2000"
                                        alt="" class="img-fluid w-25">
                                </div>

                                <h5 class="fw-normal mb-3 pb-3">
                                    Veuillez créer votre compte
                                </h5>

                                <div class="form-outline mb-4">
                                    {{ form_row(registrationForm.username, {
                                    'attr': {
                                    'class': 'form-control form-control-lg'
                                    }})
                                    }}
                                </div>

                                <div class="form-outline mb-4">
                                    {{ form_row(registrationForm.email, {
                                    'attr': {
                                    'class': 'form-control form-control-lg'
                                    }})
                                    }}
                                </div>

                                <div class="form-outline mb-4">
                                    {{ form_row(registrationForm.plainPassword, {
                                    label: 'Password',
                                    'attr': {
                                    'class': 'form-control form-control-lg'
                                    }})
                                    }}
                                </div>

                                <div class="pt-1 mb-4">
                                    <button type="submit" class="btn btn-dark btn-lg btn-block">Inscription</button>
                                </div>

                                <p class="mb-2 pb-lg-2">
                                    <a href="{{ path('app_login') }}">
                                        Vous avez déjà un compte
                                    </a>
                                </p>

                                {{ form_end(registrationForm) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
