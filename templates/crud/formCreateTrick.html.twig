<script>
    function addImageField() {
        var imageFieldsDiv = document.getElementById("imageFields");
        var newImageField = document.createElement("input");

        newImageField.setAttribute("type", "file");
        newImageField.setAttribute("name", "imageTrick[]");
        newImageField.setAttribute("accept", "image/*");
        imageFieldsDiv.appendChild(newImageField);
    }
    function removeImageField() {
        var imageFieldsDiv = document.getElementById("imageFields");
        var imageFields = imageFieldsDiv.getElementsByTagName("input");
        if (imageFields.length > 1) {
            imageFields[imageFields.length - 1].remove();
        }
    }
</script>
